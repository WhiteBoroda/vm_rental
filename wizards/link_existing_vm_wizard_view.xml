<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_linking_job_tree" model="ir.ui.view">
        <field name="name">vm_rental.linking_job.tree</field>
        <field name="model">vm_rental.linking_job</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="hypervisor_server_id"/>
                <field name="create_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_linking_job_form" model="ir.ui.view">
        <field name="name">vm_rental.linking_job.form</field>
        <field name="model">vm_rental.linking_job</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_fetch_vms" string="Fetch Available VMs" type="object" class="btn-primary" states="draft"/>
                    <button name="action_link_vms" string="Link Selected VMs" type="object" class="btn-primary" states="draft" confirm="Are you sure you want to link the selected VMs?"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <field name="hypervisor_server_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <notebook>
                        <page string="Available VMs">
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="should_link"/>
                                    <field name="name"/>
                                    <field name="vmid"/>
                                    <field name="node"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_linking_job" model="ir.actions.act_window">
        <field name="name">VM Linking Jobs</field>
        <field name="res_model">vm_rental.linking_job</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>