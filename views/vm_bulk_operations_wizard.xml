<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Визард для массовых операций с VM -->
    <record id="view_vm_bulk_operations_wizard" model="ir.ui.view">
        <field name="name">vm.bulk.operations.wizard.form</field>
        <field name="model">vm.bulk.operations.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Operations">
                <group>
                    <group string="Operation Details">
                        <field name="operation_type" widget="radio"/>
                        <field name="vm_count" readonly="1" string="Selected VMs"/>
                    </group>

                    <group string="Configuration"
                           attrs="{'invisible': [('operation_type', '!=', 'apply_config')]}">
                        <field name="target_category" required="1"
                               attrs="{'invisible': [('operation_type', '!=', 'apply_config')]}"/>
                    </group>

                    <group string="State Change"
                           attrs="{'invisible': [('operation_type', '!=', 'change_state')]}">
                        <field name="target_state" required="1"
                               attrs="{'invisible': [('operation_type', '!=', 'change_state')]}"/>
                    </group>

                    <group string="Subscription Extension"
                           attrs="{'invisible': [('operation_type', '!=', 'extend_subscription')]}">
                        <field name="extend_months" required="1"
                               attrs="{'invisible': [('operation_type', '!=', 'extend_subscription')]}"/>
                    </group>
                </group>

                <group string="Selected VMs">
                    <field name="vm_ids" nolabel="1" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="vm_resource_category"/>
                            <field name="partner_id"/>
                        </tree>
                    </field>
                </group>

                <footer>
                    <button name="execute_operation" type="object"
                            string="Execute Operation" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Действие для массовых операций -->
    <record id="action_vm_bulk_operations" model="ir.actions.act_window">
        <field name="name">Bulk Operations</field>
        <field name="res_model">vm.bulk.operations.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_vm_rental_machine"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>