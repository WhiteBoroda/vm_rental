<?xml version="1.0" encoding="utf-8"?>
<!-- vm_rental/views/vm_user_settings_views.xml -->
<odoo>

    <!-- УДАЛЯЕМ этот файл или заменяем на упрощенную версию -->
    <!-- Основной функционал теперь в vm_user_manager_views.xml -->

    <!-- Простое представление для совместимости, если где-то есть ссылки -->
    <record id="res_config_settings_view_form_vm_rental_users_deprecated" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.vm_rental.users.deprecated</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="res_config_settings_view_form_vm_rental"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='vm_rental_settings']" position="inside">

                <!-- Простое информационное сообщение -->
                <div class="row mt32">
                    <div class="col-12">
                        <div class="alert alert-info" role="alert">
                            <h5><i class="fa fa-info-circle mr-2"></i>User Management</h5>
                            <p class="mb-2">
                                VM Rental user access management has been moved to a dedicated interface
                                for better functionality and reliability.
                            </p>
                            <button name="%(vm_rental.action_vm_user_manager)d" type="action"
                                    string="Open VM User Manager"
                                    class="btn btn-primary"/>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

</odoo>