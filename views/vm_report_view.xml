<odoo>
  <record id="action_report_vm_admin" model="ir.actions.act_window">
    <field name="name">VM Admin Report</field>
    <field name="res_model">vm.instance</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="domain">[]</field>
  </record>

  <menuitem id="menu_vm_reports" name="VM Reports" parent="base.menu_reporting"/>
  <menuitem id="menu_vm_admin_report" name="All Virtual Machines" parent="menu_vm_reports" action="action_report_vm_admin"/>

  <record id="view_vm_instance_tree_inherit_report" model="ir.ui.view">
    <field name="name">vm.instance.tree.report</field>
    <field name="model">vm.instance</field>
    <field name="inherit_id" ref="vm_rental.view_vm_instance_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//tree" position="inside">
        <field name="state"/>
        <field name="start_date"/>
        <field name="end_date"/>
        <field name="total_amount"/>
      </xpath>
    </field>
  </record>
</odoo>
