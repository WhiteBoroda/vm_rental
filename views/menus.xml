<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Основное меню -->
    <menuitem
        id="menu_vm_rental_root"
        name="VM Rental"
        sequence="10"/>

    <!-- VM Management -->
    <menuitem
        id="menu_vm_instances"
        name="VM Instances"
        parent="menu_vm_rental_root"
        action="vm_rental.action_vm_instance"
        sequence="10"/>

    <menuitem
        id="menu_link_existing_vms"
        name="Link Existing VMs"
        parent="menu_vm_rental_root"
        action="vm_rental.action_linking_job"
        sequence="20"/>

    <!-- Configuration -->
    <menuitem
        id="menu_vm_config_wizard"
        name="Configuration Wizard"
        parent="menu_vm_rental_root"
        action="action_vm_config_wizard"
        sequence="25"/>

    <!-- Bulk Operations -->
    <menuitem
        id="menu_vm_bulk_operations"
        name="Bulk Operations"
        parent="menu_vm_rental_root"
        action="action_vm_bulk_operations"
        sequence="30"/>

    <!-- Infrastructure -->
    <menuitem
        id="menu_hypervisor_servers"
        name="Hypervisor Servers"
        parent="menu_vm_rental_root"
        action="vm_rental.action_hypervisor_server"
        sequence="50"/>

    <!-- Reports and Analytics -->
    <menuitem
        id="menu_vm_reports_submenu"
        name="Reports & Analytics"
        parent="menu_vm_rental_root"
        sequence="80"/>

    <menuitem
        id="menu_vm_dashboard"
        name="VM Dashboard"
        parent="vm_rental.menu_vm_reports_submenu"
        action="vm_rental.action_vm_dashboard"
        sequence="5"/>

    <menuitem
        id="menu_vm_resource_report"
        name="Resource Reports"
        parent="vm_rental.menu_vm_reports_submenu"
        action="vm_rental.action_vm_resource_report"
        sequence="10"/>

    <menuitem
        id="menu_vm_admin_report"
        name="All Virtual Machines"
        parent="vm_rental.menu_vm_reports_submenu"
        action="vm_rental.action_report_vm_admin"
        sequence="15"/>

    <!-- Tools and Utilities -->
    <menuitem
        id="menu_vm_tools_submenu"
        name="Tools"
        parent="menu_vm_rental_root"
        sequence="90"/>

    <!-- Автоматическое создание продуктов -->
    <record id="action_create_vm_products" model="ir.actions.server">
        <field name="name">Create VM Product Variants</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">
created = model.create_vm_product_variants()
action = {
    'type': 'ir.actions.act_window',
    'name': 'Created VM Products',
    'res_model': 'product.template',
    'view_mode': 'tree,form',
    'domain': [('id', 'in', created.ids)],
}
        </field>
    </record>

    <menuitem
        id="menu_create_vm_products"
        name="Create VM Products"
        parent="menu_vm_tools_submenu"
        action="action_create_vm_products"
        sequence="10"/>

    <!-- Статистика ресурсов -->
    <record id="action_vm_resource_stats" model="ir.actions.server">
        <field name="name">Show Resource Statistics</field>
        <field name="model_id" ref="model_vm_rental_machine"/>
        <field name="state">code</field>
        <field name="code">
stats = model.get_resource_utilization_stats()
distribution = model.get_hypervisor_distribution()

message = f"""
Resource Utilization Statistics:
• Total Active VMs: {stats.get('total_vms', 0)}
• Total CPU Cores: {stats.get('total_cores', 0)}
• Total Memory: {stats.get('total_memory_gb', 0)} GB
• Total Disk: {stats.get('total_disk_gb', 0)} GB
• Average per VM: {stats.get('avg_cores', 0)} cores, {stats.get('avg_memory_mb', 0)} MB RAM

Hypervisor Distribution:
""" + '\n'.join([f"• {name}: {data['count']} VMs ({data['hypervisor_type']})" for name, data in distribution.items()])

action = {
    'type': 'ir.actions.client',
    'tag': 'display_notification',
    'params': {
        'title': 'VM Resource Statistics',
        'message': message,
        'type': 'info',
        'sticky': True,
    }
}
        </field>
    </record>

    <menuitem
        id="menu_vm_resource_stats"
        name="Resource Statistics"
        parent="menu_vm_tools_submenu"
        action="action_vm_resource_stats"
        sequence="20"/>

</odoo>