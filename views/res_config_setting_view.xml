<odoo>
  <record id="res_config_settings_view_form_vm_rental" model="ir.ui.view">
    <field name="name">res.config.settings.vm.rental</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='settings']" position="inside">
        <div class="app_settings_block" data-string="VM Rental Settings">
          <h2>Proxmox Configuration</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6">
              <field name="proxmox_user"/>
              <field name="proxmox_node"/>
              <field name="proxmox_storage"/>
            </div>
            <div class="col-12 col-lg-6 mt16">
              <button name="test_proxmox_connection"
                      type="object"
                      string="Test Proxmox Connection"
                      class="btn btn-primary"
                      context="{}"/>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
