<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_actions_server_check_vm_expiry" model="ir.actions.server">
            <field name="name">VM Rental: Check VM Expiry Action</field>
            <field name="model_id" ref="vm_rental.model_vm_rental_machine"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_expiry()</field>
        </record>

        <record id="cron_check_vm_expiry" model="ir.cron">
            <field name="name">VM Rental: Check VM Expiry</field>
            
            <field name="ir_actions_server_id" ref="ir_actions_server_check_vm_expiry"/>
            
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="number_of_calls">-1</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>